<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <title>@ViewBag.Title - RNSIT</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/style.css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
body {
  font-family: "Lato", sans-serif;
}

.sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #111;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
}

.sidenav a {
  padding: 8px 8px 8px 32px;
  text-decoration: none;
  font-size: 25px;
  color: #818181;
  display: block;
  transition: 0.3s;
}

.sidenav a:hover {
  color: #f1f1f1;
}

.sidenav .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px;
}

#main {
  transition: margin-left .5s;
  padding: 16px;
}
</style>
</head>
<body style="margin:0;padding:0;">
    <nav class="navbar navbar-expand-sm bg-white justify-content-left shadow" style="height:40px;">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <span style="font-size:30px;cursor:pointer;color:#808080;" onclick="Nav()">&#9776;</span>
            </li>
            <li class="nav-item" style="left:50%; position:fixed;">
                <a class="navbar-brand" style="background-color:transparent;">
                    <img style="max-width:30px; margin-top:0px;"
                         src="~/Content/logo.jpg" >
                    <text style="color:black">RNSIT</text>
                </a>
            </li>
        </ul>
        <ul class="nav navbar-nav" style="right:10px; position:absolute;">
            <li>@Html.Partial("_LoginPartial")</li>
        </ul>
    </nav>
    <div id="mySidenav" class="sidenav" style="background-color:#424859; color:white;">
        @if (User.IsInRole("admin"))
    {
        <a href="~/Departments/Index" style="color:white;">Departments</a>
        <a href="~/Designations/Index" style="color:white;">Designation</a>
    //<a href="~/Students/Create" style="color:white;">Students</a>
    <a href="~/Subjects/Index" style="color:white;">Subjects</a>
    <a href="~/Teachers/Create" style="color:white;">Teachers</a>
}
        @if (User.IsInRole("faculty"))
    {
        <a href="~/Teachers/Details" style="color:white;">Profile</a>
        <a href="~/Qualifications/Details" style="color:white;">Qualification</a>
        <a href="~/Leaves/Index" style="color:white;">Leave Portal</a>
        <a href="~/Prev_Experience/Details" style="color:white;">Prev_Experience</a>
        <a href="~/Projects/Create" style="color:white;">Projects</a>
        <a href="~/Events/Create" style="color:white;">Events</a>
        <a href="~/Publications/Create" style="color:white;">Publicaiton</a>
        <a href="~/Scripts/Create" style="color:white;">Scripts</a>

}

    </div>
        
        <div id="main">
           
            
        </div>

        <div class="container body-content">
            @RenderBody()
            
            <footer style="position:relative; bottom:0; width:100%; text-align:center; left:0px;">
                <hr />
                <p style="justify-content:center">&copy; @DateTime.Now.Year - Aikya Software Wing</p>
            </footer>
        </div>

        <script>
            function openNav() {
                
            }

            function closeNav() {
                
            }
            function Nav() {
                if (document.getElementById("mySidenav").style.width == "250px") {
                    document.getElementById("mySidenav").style.width = "0";
                    document.getElementById("main").style.marginLeft = "0";
                }
                else {
                    document.getElementById("mySidenav").style.width = "250px";
                    document.getElementById("main").style.marginLeft = "250px";
                }
            }
        </script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
